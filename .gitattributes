*.ico binary
*.mmdb binary

# F체r Git LFS, falls verwendet
# *.mmdb filter=lfs diff=lfs merge=lfs -text

# Skripte sollten immer mit LF enden
*.sh text eol=lf

# Windows-spezifische Dateien sollten immer mit CRLF enden
*.bat text eol=crlf
*.cmd text eol=crlf

# Explizite Zeilenenden f체r bestimmte Dateien erzwingen
.gitattributes text eol=lf
.gitignore text eol=lf
